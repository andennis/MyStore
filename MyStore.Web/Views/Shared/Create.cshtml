@model BaseViewModel

@{
    Layout = "~/Views/Shared/_LayoutDetails.cshtml";
    ViewBag.Title = "Create " + Model.DisplayName;
}

@section Title
{
    <span class="flexCaption">Create @Model.DisplayName</span>
}

@Html.Partial("_Form")

@section Actions
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="buttonSave" type="submit" value="Create" class="btn btn-default" />
            <input id="buttonCancel" type="button" value="Cancel" class="btn btn-default" data-form-action="@(!string.IsNullOrEmpty(Model.RedirectUrl) ? Model.RedirectUrl : Url.Action("Index"))" />
        </div>
    </div>
}